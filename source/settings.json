{
  "name": "Foundry",
  "version": "0.0.46",
  "images": [
    {
      "variable": "header_logo",
      "label": "Header logo",
      "description": "Good for a logo up to 208 x 66 pixels"
    },
    {
      "variable": "welcome_image",
      "label": "Welcome image",
      "description": "Good for an image up to 1300 by 250 pixels",
      "default": "welcome.png"
    }
  ],
  "fonts": [
    {
      "variable": "primary_font",
      "label": "Primary Font",
      "default": "Work Sans"
    },
    {
      "variable": "secondary_font",
      "label": "Secondary Font",
      "default": "Karla"
    }
  ],
  "colors": [
    {
      "variable": "background_color",
      "label": "Background",
      "default": "#FFFFFF"
    },
    {
      "variable": "header_background_color",
      "label": "Header & button background",
      "default": "#222222"
    },
    {
      "variable": "header_text_color",
      "label": "Header & button text",
      "default": "#FFFFFF"
    },
    {
      "variable": "home_image_overlay_color",
      "label": "Overlay background color",
      "default": "#222222"
    },
    {
      "variable": "home_image_text_color",
      "label": "Overlay text color",
      "default": "#FFFFFF"
    },
    {
      "variable": "primary_text_color",
      "label": "Primary text",
      "default": "#222222"
    },
    {
      "variable": "secondary_text_color",
      "label": "Secondary text",
      "default": "#646464"
    },
    {
      "variable": "border_color",
      "label": "Borders",
      "default": "#999999"
    },
    {
      "variable": "error_text_color",
      "label": "Errors",
      "default": "#CF3636"
    }
  ],
  "options": [
    {
      "variable": "welcome_text",
      "label": "Welcome Text",
      "type": "text",
      "description": "Welcome message for your visitors",
      "default": "Welcome our new insect overlords"
    },
    {
      "variable": "home_tagline",
      "label": "Home page tagline",
      "type": "text",
      "description": "Home page tagline",
      "default": "Welcome to my ultra rad shop, i am cool?"
    },
    {
      "variable": "show_search",
      "label": "Show search",
      "type": "boolean",
      "default": true,
      "description": "Displays search in the header"
    },
    {
      "variable": "show_overlay",
      "label": "Product list info",
      "type": "select",
      "options": ["On rollover", "Under image"],
      "default": "On rollover",
      "description": "Shows a product's name & price on hover or under the image"
    },
    {
      "variable": "featured_categories",
      "label": "Featured categories",
      "type": "select",
      "options": ["0","2","3","4","5","6","7","8","9","10"],
      "default": "5",
      "description": "The number of featured categories on the Home page"
    },
    {
      "variable": "featured_products",
      "label": "Featured products",
      "type": "select",
      "options": "0..100",
      "default": 8,
      "description": "The number of featured products on the Home page"
    },
    {
      "variable": "products_per_page",
      "label": "Products per page",
      "type": "select",
      "options": "1..100",
      "default": 12,
      "description": "The number of products displayed per page"
    },
    {
      "variable": "twitter_url",
      "label": "Twitter URL",
      "type": "text",
      "description": "Ex: http://twitter.com/bigcartel",
      "default": "http://twitter.com/bigcartel"
    },
    {
      "variable": "facebook_url",
      "label": "Facebook URL",
      "type": "text",
      "description": "Ex: http://facebook.com/bigcartel",
      "default": "http://twitter.com/bigcartel"
    },
    {
      "variable": "tumblr_url",
      "label": "Tumblr URL",
      "type": "text",
      "description": "Ex: http://bigcartel.tumblr.com",
      "default": "http://twitter.com/bigcartel"
    },
    {
      "variable": "instagram_url",
      "label": "Instagram URL",
      "type": "text",
      "description": "Ex: http://instagram.com/bigcartel",
      "default": "http://twitter.com/bigcartel"
    },
    {
      "variable": "pinterest_url",
      "label": "Pinterest URL",
      "type": "text",
      "description": "Ex: http://pinterest.com/bigcartel",
      "default": "http://twitter.com/bigcartel"
    }
  ]
}