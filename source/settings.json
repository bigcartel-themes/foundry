  "options": [
    {
      "variable": "announcement_message_text",
      "label": "Announcement text",
      "max_length": 500,
      "type": "text",
      "description": "Displays an announcement message on the top of every page"
    },
    {
      "variable": "contact_text",
      "label": "Contact page text",
      "type": "text",
      "max_length": 500,
      "description": "Displays a message within your contact page"
    },
    {
      "variable": "cart_text",
      "label": "Cart page text",
      "type": "text",
      "description": "Displays a message within your cart page"
    },
    {
      "variable": "maintenance_message",
      "label": "Maintenance mode message",
      "type": "text",
      "max_length": 2048,
      "description": "A message visitors see when your shop is in Maintenance Mode",
      "default": "We're working on our shop right now.<br /><br />Please check back soon."
    },
    {
      "variable": "welcome_text",
      "label": "Welcome text",
      "type": "text",
      "description": "Home page message for your visitors, use this with a welcome image"
    },
    {
      "variable": "welcome_button_text",
      "label": "Welcome button text",
      "type": "text",
      "description": "Displays underneath the welcome text on the Home page, links to your Products page"
    },
    {
      "variable": "welcome_button_behavior",
      "label": "Welcome Button Behavior",
      "type": "select",
      "options": [
        ["Scroll down page", "scroll"],
        ["Go to Products Page", "navigate"]
      ],
      "default": "scroll",
      "description": "Controls the behavior of the welcome button on the Home page",
      "requires": [
        "welcome_button_text present"
      ]
    },
    {
      "variable": "welcome_overlay_opacity",
      "label": "Welcome overlay opacity",
      "type": "select",
      "options": [
        ["Very bright", "very_bright"],
        ["Bright", "bright"],
        ["None", "none"],
        ["Dark", "dark"],
        ["Very dark", "very_dark"]
      ],
      "default": "dark",
      "description": "Adjust the homepage welcome image to enhance the legibility of your welcome text and button"
    },
    {
      "variable": "home_tagline",
      "label": "Home page tagline",
      "type": "text",
      "description": "Home page tagline, displays above the featured header"
    },
    {
      "variable": "transparent_header_with_welcome",
      "label": "Transparent header on welcome image",
      "type": "boolean",
      "default": false,
      "description": "Makes the header background transparent when a welcome image is present, allowing the image to show through"
    },
    {
      "variable": "pages_global_nav_style",
      "label": "Shop header menu style for custom pages in desktop view",
      "type": "select",
      "options": [
        ["Dropdown", "dropdown"],
        ["Inline", "inline"]
      ],
      "default": "dropdown",
      "description": "Choose how your custom pages appear in your shop's header menu."
    },
    {
      "variable": "pages_global_nav_dropdown_text",
      "label": "Custom Pages header dropdown text",
      "type": "text",
      "default": "More",
      "max_length": 25,
      "description": "The label for your dropdown menu containing custom pages. Only applies when using dropdown style",
      "requires": [
        "pages_global_nav_style eq dropdown"
      ]
    },
    {
      "variable": "nav_items",
      "label": "Navigation items",
      "type": "select",
      "options": "0..4",
      "default": 2,
      "description": "Number of custom page links to show in main navigation. Only applies to inline style",
      "requires": [
        "pages_global_nav_style eq inline"
      ]
    },
    {
      "variable": "featured_header",
      "label": "Featured products header",
      "type": "text",
      "description": "Displays above featured products on the Home page",
      "default": "Featured Products"
    },
    {
      "variable": "featured_products",
