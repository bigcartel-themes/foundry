{
  "name": "Foundry",
  "version": "2.0.0",
  "images": [
    {
      "variable": "header_logo",
      "label": "Header logo",
      "description": "Good for a logo up to 60 pixels high"
    },
    {
      "variable": "welcome_image",
      "label": "Welcome image",
      "description": "Displays a full screen image on the Home page"
    }
  ],
  "preset_styles": {
    "preview": {
      "title_font": "primary_font",
      "body_font": "secondary_font",
      "text_color": "primary_text_color",
      "background_color": "background_color"
    },
    "presets": [
      {
        "group_name": "Classic",
        "styles": [
          {
            "style_name": "Classic #1",
            "fonts": {
              "primary_font": "Work Sans",
              "secondary_font": "Work Sans"
            },
            "colors": {
              "background_color": "#FFFFFF",
              "header_background_color": "#222222",
              "header_text_color": "#FFFFFF",
              "header_text_hover_color": "#BBBBBB",
              "button_background_color": "#222222",
              "button_text_color": "#FFFFFF",
              "button_hover_background_color": "#116E56",
              "primary_text_color": "#222222",
              "secondary_text_color": "#555555",
              "link_hover_color": "#116E56",
              "footer_background_color": "#F9F9F9",
              "announcement_text_color": "#222222",
              "announcement_background_color": "#EEEEEE"
            }
          },
          {
            "style_name": "Classic #2",
            "fonts": {
              "primary_font": "Prompt",
              "secondary_font": "DM Sans"
            },
            "colors": {
              "background_color": "#FFFFFF",
              "header_background_color": "#FFFFFF",
              "header_text_color": "#111111",
              "header_text_hover_color": "#5900FF",
              "button_background_color": "#111111",
              "button_text_color": "#FFFFFF",
              "button_hover_background_color": "#5900FF",
              "primary_text_color": "#111111",
              "secondary_text_color": "#111111",
              "link_hover_color": "#5900FF",
              "footer_background_color": "#FFFFFF",
              "announcement_text_color": "#111111",
              "announcement_background_color": "#F3F3F5"
            }
          }
        ]
      },
      {
        "group_name": "Elegant",
        "styles": [
          {
            "style_name": "Elegant #1",
            "fonts": {
              "primary_font": "Marcellus",
              "secondary_font": "Lato"
            },
            "colors": {
              "background_color": "#141415",
              "header_background_color": "#141415",
              "header_text_color": "#F8F8F8",
              "header_text_hover_color": "#C6C6C6",
              "button_background_color": "#F8F8F8",
              "button_text_color": "#141415",
              "button_hover_background_color": "#C6C6C6",
              "primary_text_color": "#F8F8F8",
              "secondary_text_color": "#F8F8F8",
              "link_hover_color": "#C6C6C6",
              "footer_background_color": "#141415",
              "announcement_text_color": "#F8F8F8",
              "announcement_background_color": "#303030"
            }
          },
          {
            "style_name": "Elegant #2",
            "fonts": {
              "primary_font": "Prata",
              "secondary_font": "Source Sans Pro"
            },
            "colors": {
              "background_color": "#F8F8F8",
              "header_background_color": "#DBD1D1",
              "header_text_color": "#0F1B27",
              "header_text_hover_color": "#8A5A5A",
              "button_background_color": "#DBD1D1",
              "button_text_color": "#0F1B27",
              "button_hover_background_color": "#C7B3B3",
              "primary_text_color": "#0F1B27",
              "secondary_text_color": "#0F1B27",
              "link_hover_color": "#8A5A5A",
              "footer_background_color": "#F8F8F8",
              "announcement_text_color": "#0F1B27",
              "announcement_background_color": "#EBE7E7"
            }
          }
        ]
      },
      {
        "group_name": "Natural",
        "styles": [
          {
            "style_name": "Natural #1",
            "fonts": {
              "primary_font": "Cutive",
              "secondary_font": "Cutive Mono"
            },
            "colors": {
              "background_color": "#FFFDFC",
              "header_background_color": "#D6E3F8",
              "header_text_color": "#584B53",
              "header_text_hover_color": "#9D5C63",
              "button_background_color": "#9D5C63",
              "button_text_color": "#FFFDFC",
              "button_hover_background_color": "#584B53",
              "primary_text_color": "#584B53",
              "secondary_text_color": "#584B53",
              "link_hover_color": "#9D5C63",
              "footer_background_color": "#FEF5EF",
              "announcement_text_color": "#584B53",
              "announcement_background_color": "#FEF5EF"
            }
          }
        ]
      }
    ]
  },
  "fonts": [
    {
      "variable": "primary_font",
      "label": "Primary Font",
      "default": "Work Sans"
    },
    {
      "variable": "secondary_font",
      "label": "Secondary Font",
      "default": "Work Sans"
    }
  ],
  "colors": [
    {
      "variable": "background_color",
      "label": "Background",
      "default": "#FFFFFF"
    },
    {
      "variable": "header_background_color",
      "label": "Header background",
      "default": "#222222"
    },
    {
      "variable": "header_text_color",
      "label": "Header text",
      "default": "#FFFFFF"
    },
    {
      "variable": "header_text_hover_color",
      "label": "Header text hover",
      "default": "#BBBBBB"
    },
    {
      "variable": "primary_text_color",
      "label": "Primary text",
      "default": "#222222"
    },
    {
      "variable": "secondary_text_color",
      "label": "Secondary text",
      "default": "#555555"
    },
    {
      "variable": "link_hover_color",
      "label": "Link hover",
      "default": "#116E56"
    },
    {
      "variable": "button_text_color",
      "label": "Button text",
      "default": "#FFFFFF"
    },
    {
      "variable": "button_background_color",
      "label": "Button background",
      "default": "#222222"
    },
    {
      "variable": "button_hover_background_color",
      "label": "Button background hover",
      "default": "#116E56"
    },
    {
      "variable": "footer_background_color",
      "label": "Footer background",
      "default": "#F9F9F9"
    },
    {
      "variable": "announcement_text_color",
      "label": "Announcement Message Text",
      "default": "#222222"
    },
    {
      "variable": "announcement_background_color",
      "label": "Announcement Message Background",
      "default": "#EEEEEE"
    }
  ],
  "options": [
    {
      "variable": "announcement_message_text",
      "label": "Announcement text",
      "type": "text",
      "description": "Displays an announcement message on the top of every page"
    },
    {
      "variable": "contact_text",
      "label": "Contact page text",
      "type": "text",
      "description": "Displays a message within your contact page"
    },
    {
      "variable": "cart_text",
      "label": "Cart page text",
      "type": "text",
      "description": "Displays a message within your cart page"
    },
    {
      "variable": "maintenance_message",
      "label": "Maintenance mode message",
      "type": "text",
      "description": "A message visitors see when your shop is in Maintenance Mode",
      "default": "We're working on our shop right now.<br /><br />Please check back soon."
    },
    {
      "variable": "welcome_text",
      "label": "Welcome text",
      "type": "text",
      "description": "Home page message for your visitors, use this with a welcome image"
    },
    {
      "variable": "welcome_button_text",
      "label": "Welcome button text",
      "type": "text",
      "description": "Displays underneath the welcome text on the Home page, links to your Products page"
    },
    {
      "variable": "home_tagline",
      "label": "Home page tagline",
      "type": "text",
      "description": "Home page tagline, displays above the featured header"
    },
    {
      "variable": "featured_header",
      "label": "Featured header",
      "type": "text",
      "description": "Featured products header on the Home page",
      "default": "Featured"
    },
    {
      "variable": "featured_products",
      "label": "Featured products",
      "type": "select",
      "options": "0..100",
      "default": 12,
      "description": "The number of products displayed on the Home page"
    },
    {
      "variable": "featured_order",
      "label": "Featured products order",
      "type": "select",
      "options": [
        ["Regular", "regular"],
        ["Top Selling", "sales"],
        ["Newest", "newest"]
      ],
      "default": "regular",
      "description": "The order of products on the Home page"
    },
    {
      "variable": "all_products_button_text",
      "label": "All products button text",
      "type": "text",
      "description": "Displays underneath featured products, links to your Products page",
      "default": "All Products"
    },
    {
      "variable": "show_home_page_categories",
      "label": "Display categories on Home page",
      "type": "boolean",
      "default": true,
      "description": "Displays categories as a grid on the Home page"
    },
    {
      "variable": "home_page_categories_header",
      "label": "Categories header",
      "type": "text",
      "description": "Displays above categories on the Home page",
      "default": "Categories"
    },
    {
      "variable": "max_categories_per_row",
      "label": "Maximum categories per row",
      "type": "select",
      "options": "1..4",
      "default": 3,
      "description": "The maximum number of Home page categories displayed per row on larger screens"
    },
    {
      "variable": "max_categories_per_row_mobile",
      "label": "Maximum categories per row (mobile)",
      "type": "select",
      "options": "1..2",
      "default": 2,
      "description": "The maximum number of Home page categories displayed per row on smaller screens"
    },
    {
      "variable": "grid_image_style",
      "label": "Product grid image style",
      "type": "select",
      "options": [
        ["Normal", "default"],
        ["Fit to square", "contain"],
        ["Crop to square", "cover"]
      ],
      "default": "cover",
      "description": "Sets the display of images in the product grid"
    },
    {
      "variable": "max_products_per_row",
      "label": "Maximum products per row",
      "type": "select",
      "options": "1..4",
      "default": 3,
      "description": "The maximum number of products displayed per row on larger screens"
    },
    {
      "variable": "max_products_per_row_mobile",
      "label": "Maximum products per row (mobile)",
      "type": "select",
      "options": "1..2",
      "default": 2,
      "description": "The number of products displayed per row on smaller screens"
    },
    {
      "variable": "products_per_page",
      "label": "Products per page",
      "type": "select",
      "options": "1..100",
      "default": 48,
      "description": "The number of products shown at a time on the Products page"
    },
    {
      "variable": "nav_items",
      "label": "Navigation items",
      "type": "select",
      "options": "0..4",
      "default": 2,
      "description": "The number of custom page links show in the main navigation"
    },
    {
      "variable": "show_search",
      "label": "Show search",
      "type": "boolean",
      "default": true,
      "description": "Displays a product search icon in the header"
    },
    {
      "variable": "show_sold_out_product_options",
      "label": "Show sold out product options",
      "type": "boolean",
      "default": true,
      "description": "Shows sold out product options in the Product page dropdowns",
      "requires": "inventory"
    },
    {
      "variable": "product_image_zoom",
      "label": "Enable product image zoom",
      "type": "boolean",
      "default": true,
      "description": "Click to open a larger version of the Product page image"
    },
    {
      "variable": "desktop_product_page_images",
      "label": "Desktop product page images",
      "type": "select",
      "options": [
        ["Thumbnails", "thumbnails"],
        ["Carousel", "carousel"],
        ["Stacked 2 column", "two-column"],
        ["Stacked full width", "stacked"]
      ],
      "default": "carousel",
      "description": "Sets the display of the Product page gallery"
    },
    {
      "variable": "mobile_product_page_images",
      "label": "Mobile product page image carousel",
      "type": "select",
      "options": [
        ["Show thumbnails", "show-thumbnails"],
        ["Hide thumbnails", "hide-thumbnails"]
      ],
      "default": "show-thumbnails",
      "description": "Choose to hide or show thumbnails on the mobile Product page carousel"
    },
    {
      "variable": "money_format",
      "label": "Price display",
      "type": "select",
      "options": [
        ["Currency sign", "sign"],
        ["Currency code with sign", "sign_and_code"]
      ],
      "default": "sign",
      "description": "Sets the display of prices in your shop"
    },
    {
      "variable": "border_radius",
      "label": "Rounded corners",
      "type": "select",
      "options": [
        ["Off", "0"],
        ["Small", "2px"],
        ["Medium", "4px"],
        ["Large", "8px"]
      ],
      "default": "4px",
      "description": "Controls the rounded corner style on images and other site elements"
    },
    {
      "variable": "instagram_url",
      "label": "Instagram URL",
      "type": "text",
      "description": "Ex: https://instagram.com/bigcartel"
    },
    {
      "variable": "tiktok_url",
      "label": "TikTok URL",
      "type": "text",
      "description": "Ex: https://tiktok.com/@bigcartelofficial"
    },
    {
      "variable": "twitter_url",
      "label": "Twitter URL",
      "type": "text",
      "description": "Ex: https://twitter.com/bigcartel"
    },
    {
      "variable": "facebook_url",
      "label": "Facebook URL",
      "type": "text",
      "description": "Ex: https://facebook.com/bigcartel"
    },
    {
      "variable": "snapchat_url",
      "label": "Snapchat URL",
      "type": "text",
      "description": "Ex: https://snapchat.com/add/bigcartel"
    },
    {
      "variable": "pinterest_url",
      "label": "Pinterest URL",
      "type": "text",
      "description": "Ex: https://pinterest.com/big_cartel"
    },
    {
      "variable": "youtube_url",
      "label": "YouTube URL",
      "type": "text",
      "description": "Ex: https://youtube.com/@BigCartelDotCom"
    },
    {
      "variable": "tumblr_url",
      "label": "Tumblr URL",
      "type": "text",
      "description": "Ex: https://bigcartel.tumblr.com"
    },
    {
      "variable": "bandcamp_url",
      "label": "Bandcamp URL",
      "type": "text",
      "description": "Ex: https://bigcartel.bandcamp.com"
    }
  ],
  "checkout": {
    "header_image": "{{ header_logo }}",
    "header_image_max_width": "200px",
    "header_image_max_height": "50px",
    "title_font": "{{ primary_font }}",
    "title_font_weight": "normal",
    "title_font_size": "22px",
    "title_color": "{{ header_text_color }}",
    "title_background_color": "{{ header_background_color }}",
    "title_vertical_padding": "27px",
    "background_color": "{{ header_background_color }}",
    "body_font": "{{ secondary_font }}",
    "body_font_size": "14px",
    "step_border_color": "{{ secondary_text_color }}",
    "step_border_width": "2px",
    "step_border_style": "solid",
    "step_border_radius": "0px",
    "step_inactive_header_color": " {{ primary_text_color }}",
    "step_header_font": "{{ primary_font }}",
    "step_background_color": "{{ background_color }}",
    "content_banded": "true",
    "content_background_color": "{{ background_color }}",
    "content_header_background_color": "{{ background_color }}",
    "content_header_color": "{{ primary_text_color }}",
    "content_color": "{{ primary_text_color }}",
    "content_header_font_size": "18px",
    "content_border_color": "transparent",
    "content_border_radius": "0px",
    "error_background_color": "#b11a2a",
    "error_color": "#ffffff",
    "error_border_radius": "0",
    "error_border_color": "#b11a2a",
    "input_focus_color": "#000000",
    "input_focus_background_color": "#ffffff",
    "input_focus_border_color": "#bfbfbf",
    "input_error_border_color": "#b11a2a",
    "input_color": "#000000",
    "input_error_color": "#000000",
    "input_border_color": "#bfbfbf",
    "input_background_color": "#ffffff",
    "input_error_background_color": "#ffffff",
    "input_border_radius": "0px",
    "input_border_width": "2px",
    "input_font": "{{ secondary_font }}",
    "button_color": "{{ header_text_color }}",
    "button_border_width": "0px",
    "button_border_radius": "0px",
    "button_font": "{{ secondary_font }}",
    "button_hover_color": "{{ button_text_color }}",
    "button_background_color": "{{ button_background_color }}",
    "button_hover_background_color": "{{ button_hover_background_color }}",
    "button_border_color": "{{ button_background_color }}",
    "button_hover_border_color": "{{ button_hover_background_color }}",
    "button_text_transform": "none",
    "link_color": "{{ secondary_text_color }}",
    "link_hover_color": "{{ secondary_text_color }}",
    "step_header_color": "{{ primary_text_color }}",
    "step_header_font_size": "18px",
    "summary_color": "{{ primary_text_color }}",
    "summary_secondary_color": "{{ secondary_text_color }}",
    "summary_submit_background_color": "{{ background_color }}",
    "summary_item_border_color": "{{ secondary_text_color }}",
    "summary_item_list_border_color": "{{ secondary_text_color }}"
  }
}
